<%= form_for(@work, url: choose_new_or_edit) do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      # バリデーションエラーの件数を表示します。
      <h2><%= @work.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :material %>
  <%= f.text_field :material %>
  <br>
  <%= f.label :production1 %>
  <%= f.text_field :production1 %>
  <br>
  <%= f.label :production2 %>
  <%= f.text_field :production2 %>
  <br>
  <%= f.label :production3 %>
  <%= f.text_field :production3 %>
  <br>
  <%= f.submit %>
<% end %>

